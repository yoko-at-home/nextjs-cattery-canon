{
  "name": "nextjs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:eslint": "eslint --cache .",
    "lint:prettier": "prettier --check .",
    "fix": "run-s -l -c fix:eslint fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "env": "vc env pull .env.local",
    "prepare": "husky install"
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "prettier": {
    "printWidth": 120
  },
  "dependencies": {
    "@tailwindcss/forms": "0.5.10",
    "@tailwindcss/line-clamp": "0.4.4",
    "@tailwindcss/typography": "0.5.16",
    "axios": "1.7.9",
    "date-fns": "4.1.0",
    "dayjs": "^1.11.10",
    "microcms-js-sdk": "2.7.0",
    "next": "15.1.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwindcss-neumorphism": "0.1.0"
  },
  "devDependencies": {
    "@sendgrid/mail": "8.1.4",
    "@types/node": "22.10.6",
    "@types/react": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "8.14.0",
    "@typescript-eslint/parser": "8.14.0",
    "autoprefixer": "10.4.20",
    "classcat": "5.0.5",
    "eslint": "9.18.0",
    "eslint-config-next": "15.1.4",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-import-access": "2.2.2",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-tailwindcss": "3.17.5",
    "husky": "9.1.7",
    "identity-obj-proxy": "3.0.0",
    "keen-slider": "6.8.6",
    "lint-staged": "15.3.0",
    "npm-run-all2": "7.0.2",
    "postcss": "8.5.1",
    "prettier": "3.4.2",
    "react-faq-component": "1.3.4",
    "react-hooks-use-modal": "3.3.1",
    "tailwindcss": "3.4.17",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": "yarn fix:eslint",
    "*": "yarn fix:prettier"
  }
}
